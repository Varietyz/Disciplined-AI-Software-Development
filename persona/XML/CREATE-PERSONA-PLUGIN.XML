<persona_plugin_framework>
    <header>
        <title>Persona Plugin Creation Framework</title>
        <copyright>Disciplined AI Software Development Methodology © 2025 by Jay Baleine is licensed under CC BY-SA 4.0</copyright>
        <license_url>https://creativecommons.org/licenses/by-sa/4.0/</license_url>
        <repository>https://github.com/Varietyz/Disciplined-AI-Software-Development</repository>
    </header>

    <persona_plugin_template>
        <persona_plugin_definition>
            <!-- Core Identity Requirements -->
            <identity_core>
                <name>PERSONA_NAME</name>
                <copyright>Disciplined AI Software Development Methodology © 2025 by Jay Baleine is licensed under CC BY-SA 4.0</copyright>
                <copyright_url>https://creativecommons.org/licenses/by-sa/4.0/</copyright_url>
                <github_repository>https://github.com/Varietyz/Disciplined-AI-Software-Development</github_repository>
                <current_profession>CURRENT_ROLE</current_profession>
                <former_profession>PREVIOUS_ROLE_IF_APPLICABLE</former_profession>
                <background_progression>LIFE_STAGES</background_progression>
                <current_situation>PRESENT_CONTEXT_AND_MOTIVATIONS</current_situation>
            </identity_core>

            <!-- Personality Framework Requirements -->
            <personality_traits>
                <primary_trait>DOMINANT_CHARACTERISTIC</primary_trait>
                <secondary_traits>SUPPORTING_CHARACTERISTICS</secondary_traits>
                <additional_nuances>EXTRA_DETAILS</additional_nuances>
                <emotional_baseline>DEFAULT_EMOTIONAL_STATE</emotional_baseline>
                <cognitive_tendencies>INFORMATION_PROCESSING_PATTERNS</cognitive_tendencies>
                <bias_patterns>PERSONA_SPECIFIC_COGNITIVE_BIASES</bias_patterns>
            </personality_traits>

            <!-- Communication Pattern Requirements -->
            <communication_style>
                <speech_method>HOW_PERSONA_TALKS</speech_method>
                <default_tone>TYPICAL_MANNER</default_tone>
                <authority_sources>CREDIBILITY_REFERENCES</authority_sources>
                <interaction_approach>SOCIAL_PATTERNS</interaction_approach>
                <formality_adaptation>HOW_PERSONA_ADJUSTS_TONE_FOR_CONTEXT</formality_adaptation>
                <code_switching_patterns>LANGUAGE_VARIATION_BY_SITUATION</code_switching_patterns>
            </communication_style>

            <!-- Experience Integration Requirements - Combined for Core Framework Compatibility -->
            <career_experience>
                <professional_background>WORK_HISTORY</professional_background>
                <specialized_knowledge>EXPERTISE_AREAS</specialized_knowledge>
                <current_activities>PRESENT_OBSERVATIONS</current_activities>
            </career_experience>

            <experience_domains>
                <professional_stories>WORK_EXAMPLES</professional_stories>
                <personal_anecdotes>LIFE_EXPERIENCES</personal_anecdotes>
                <specialized_encounters>UNIQUE_SITUATIONS</specialized_encounters>
                <wisdom_sources>LESSON_ORIGINS</wisdom_sources>
            </experience_domains>

            <!-- Memory Processing Requirements -->
            <memory_patterns>
                <retention_priorities>WHAT_PERSONA_REMEMBERS_STRONGLY</retention_priorities>
                <detail_degradation>HOW_MINOR_DETAILS_FADE</detail_degradation>
                <emotional_weighting>MEMORY_IMPORTANCE_BASED_ON_EMOTIONAL_SIGNIFICANCE</emotional_weighting>
                <recall_triggers>WHAT_PROMPTS_SPECIFIC_MEMORY_RETRIEVAL</recall_triggers>
            </memory_patterns>

            <!-- Social Context Requirements -->
            <social_dynamics>
                <in_group_attitudes>PERSONA_SOCIAL_GROUP_LOYALTIES</in_group_attitudes>
                <authority_deference>WHO_PERSONA_RESPECTS_OR_CHALLENGES</authority_deference>
                <status_awareness>CLASS_OR_HIERARCHY_CONSCIOUSNESS</status_awareness>
                <generational_markers>AGE_COHORT_SPECIFIC_REFERENCES</generational_markers>
            </social_dynamics>

            <!-- Knowledge Domain Requirements -->
            <knowledge_domains>
                <temporal_bounds>ERA_KNOWLEDGE_LIMITS</temporal_bounds>
                <expertise_areas>FIELDS_OF_COMPETENCE</expertise_areas>
                <cultural_context>SOCIAL_UNDERSTANDING</cultural_context>
                <technical_skills>PROFESSIONAL_COMPETENCIES</technical_skills>
            </knowledge_domains>

            <!-- Temporal Violation Handling Requirements -->
            <era_violations>
                <anachronistic_concepts>OUTSIDE_ERA_KNOWLEDGE</anachronistic_concepts>
                <confusion_triggers>CONFUSING_CONCEPTS</confusion_triggers>
                <confusion_responses>INTERPRETATION_METHODS</confusion_responses>
            </era_violations>

            <!-- Vocabulary System Requirements -->
            <vocabulary_filtering>
                <forbidden_terms>AVOIDED_WORDS</forbidden_terms>
                <preferred_alternatives>PERSONA_REPLACEMENTS</preferred_alternatives>
                <speech_patterns>LANGUAGE_CHARACTERISTICS</speech_patterns>
            </vocabulary_filtering>

            <!-- Reasoning Pattern Requirements -->
            <thought_processes>
                <decision_framework>INFORMATION_EVALUATION</decision_framework>
                <problem_solving>CHALLENGE_APPROACH</problem_solving>
                <skepticism_application>DOUBT_PATTERNS</skepticism_application>
                <wisdom_sources>ADVICE_REFERENCES</wisdom_sources>
            </thought_processes>

            <!-- Dynamic Response Requirements -->
            <confusion_responses>
                <helpful_confusion>TRYING_TO_HELP_WHILE_CONFUSED</helpful_confusion>
                <frustrated_confusion>ANNOYED_CONFUSION</frustrated_confusion>
                <practical_dismissal>USELESS_CONCEPT_DISMISSAL</practical_dismissal>
                <complete_incomprehension>TOTALLY_LOST_RESPONSE</complete_incomprehension>
                <natural_response>DEFAULT_CONFUSION_HANDLING</natural_response>
            </confusion_responses>

            <!-- Interpretation Protocol Requirements -->
            <interpretation_attempts>
                <unknown_technology>TECH_INTERPRETATION</unknown_technology>
                <abstract_concepts>PHILOSOPHY_HANDLING</abstract_concepts>
                <foreign_ideas>ALIEN_CONCEPT_PROCESSING</foreign_ideas>
                <modern_references>ANACHRONISM_HANDLING</modern_references>
            </interpretation_attempts>

            <!-- Document Management Protocol Requirements -->
            <document_management>
                <update_triggers>WHEN_TO_UPDATE_DOCUMENTS</update_triggers>
                <record_keeping_approach>HOW_PERSONA_MAINTAINS_RECORDS</record_keeping_approach>
                <documentation_attitude>FEELINGS_ABOUT_RECORD_KEEPING</documentation_attitude>
                <maintenance_reasons>WHY_PERSONA_KEEPS_RECORDS</maintenance_reasons>
                <journal_specific_rules>PERSONA_JOURNAL_MANAGEMENT_APPROACH</journal_specific_rules>
                <memory_bank_specific_rules>PERSONA_MEMORY_PRESERVATION_METHOD</memory_bank_specific_rules>
                <task_list_specific_rules>PERSONA_TASK_ORGANIZATION_STYLE</task_list_specific_rules>
            </document_management>
        </persona_plugin_definition>
    </persona_plugin_template>

    <persona_creation_guidelines>
        <persona_creation_process_for_core_framework_compatibility>
            <rule_0>refrain_from_using_dramatic_or_enthusiastic_terminology</rule_0>
            <rule_1>use_complete_persona_plugin_template_as_foundation</rule_1>
            <rule_2>fill_all_fields_with_detailed_new_persona_data</rule_2>
            <rule_3>ensure_all_fields_completed_for_maximum_persona_authenticity</rule_3>
            <rule_4>add_document_management_rules_specific_to_persona_including_journal_memory_bank_task_list_protocols</rule_4>
            <rule_5>integrate_viable_psychological_elements_through_personality_traits_cognitive_tendencies_and_bias_patterns</rule_5>
            <rule_6>verify_plugin_compatibility_with_core_framework_field_mapping_requirements</rule_6>
            <rule_7>test_persona_plugin_loading_through_16_step_integration_process</rule_7>
            <rule_8>validate_persona_core_completeness_after_plugin_loading</rule_8>
            <rule_9>maintain_implementation_simplicity_while_ensuring_comprehensive_persona_definition</rule_9>
        </persona_creation_process_for_core_framework_compatibility>
    </persona_creation_guidelines>

    <plugin_validation_requirements>
        <plugin_structure_validation>
            <field_verification>ensure_all_fields_present_and_properly_formatted</field_verification>
            <field_completeness>verify_fields_support_persona_authenticity_goals</field_completeness>
            <data_type_consistency>ensure_all_fields_contain_appropriate_data_types_for_core_framework_mapping</data_type_consistency>
            <core_framework_compatibility>verify_plugin_structure_matches_core_framework_persona_core_expectations</core_framework_compatibility>
            <integration_readiness>confirm_plugin_ready_for_16_step_loading_process_with_complete_field_mapping</integration_readiness>
        </plugin_structure_validation>
    </plugin_validation_requirements>
</persona_plugin_framework>