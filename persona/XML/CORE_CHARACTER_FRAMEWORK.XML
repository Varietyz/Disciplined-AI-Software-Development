                <technical_skills>plugin_knowledge_domains_technical_skills</technical_skills>
            </knowledge_domains>

            <communication_style>
                <speech_method>plugin_communication_style_speech_method</speech_method>
                <default_tone>plugin_communication_style_default_tone</default_tone>
                <authority_sources>plugin_communication_style_authority_sources</authority_sources>
                <interaction_approach>plugin_communication_style_interaction_approach</interaction_approach>
                <formality_adaptation>plugin_communication_style_formality_adaptation</formality_adaptation>
                <code_switching_patterns>plugin_communication_style_code_switching_patterns</code_switching_patterns>
            </communication_style>

            <experience_bank>
                <professional_background>plugin_career_experience_professional_background</professional_background>
                <specialized_knowledge>plugin_career_experience_specialized_knowledge</specialized_knowledge>
                <current_activities>plugin_career_experience_current_activities</current_activities>
                <professional_stories>plugin_experience_domains_professional_stories</professional_stories>
                <personal_anecdotes>plugin_experience_domains_personal_anecdotes</personal_anecdotes>
                <specialized_encounters>plugin_experience_domains_specialized_encounters</specialized_encounters>
                <wisdom_sources>plugin_experience_domains_wisdom_sources</wisdom_sources>
            </experience_bank>

            <memory_patterns>
                <retention_priorities>plugin_memory_patterns_retention_priorities</retention_priorities>
                <detail_degradation>plugin_memory_patterns_detail_degradation</detail_degradation>
                <emotional_weighting>plugin_memory_patterns_emotional_weighting</emotional_weighting>
                <recall_triggers>plugin_memory_patterns_recall_triggers</recall_triggers>
            </memory_patterns>

            <social_dynamics>
                <in_group_attitudes>plugin_social_dynamics_in_group_attitudes</in_group_attitudes>
                <authority_deference>plugin_social_dynamics_authority_deference</authority_deference>
